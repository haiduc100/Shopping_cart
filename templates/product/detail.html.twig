{% extends "base.html.twig" %}
{% block title %}Product Detail
{% endblock %}


{% block body %}
	<div class="container">
	<a class="btn btn-primary" href="{{path ('product_index')}}">Back to Product</a>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Name</th>
					<th scope="col">Image</th>
					<th scope="col">Price</th>
					<th scope="col">Category</th>
					<th scope="col">Desciption</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td scope="row">{{product.id}}</td>
					<td scope="row">{{product.name}}</td>
					<td scope="row">
					<img src="{{asset ('images/products/'~ product.image)}}" width="80px" height="120px">
					</td>
					<td scope="row">{{product.price}}</td>
					<td scope="row">
						<a href="{{ path ('category_detail',{'id': product.category.id}) }}">{{ product.category.name }}</a>
					<td scope="row">{{product.description}}</td>
					</td>
					<td scope="row">
						<a class="btn btn-primary" href="{{path ('product_update', {'id': product.id})}}">Edit</a>
						<a class="btn btn-danger" href="{{path ('product_delete', {'id': product.id})}}" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
