{% extends "base.html.twig" %}

{% block body %}
	<div class="container">
		<h2>Create a new product</h2>
		<div>
			{{form_start (form)}}
			<div class="form-group">
				{{form_label (form.name)}}
				{{form_widget (form.name, {'atrr':{'class': 'form-control'}})}}
			</div>
			<div class="form-group">
				{{form_label (form.image)}}
				{{form_widget (form.image, {'atrr':{'class': 'form-control'}})}}
			</div>
			<div class="form-group">
				{{form_label (form.price)}}
				{{form_widget (form.price, {'atrr':{'class': 'form-control'}})}}
			</div>
			<div class="form-group">
				{{form_label (form.category)}}
				{{form_widget (form.category, {'atrr':{'class': 'form-control'}})}}
			</div>
			<div class="form-group">
				{{form_label (form.description)}}
				{{form_widget (form.description, {'atrr':{'class': 'form-control'}})}}
			</div>
			<div class="form-group">
				<button class="btn btn-primary mt-3">Update</button>
			</div>
			{{form_end (form)}}
		</div>
	</div>
{% endblock %}
